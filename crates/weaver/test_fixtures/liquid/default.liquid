<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />

		<title>{{ page.title }}</title>
		<link rel="icon" href="/static/favicon.ico" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />

		<meta name="description" content="{{ page.meta.description }}"/>
		<meta name="keywords" content="{{ page.meta.keywords | join: ", " }}"/>
	</head>
	<body>
		<main>
			<h1>{{ page.title }}</h1>
			{% if page.body %}
				<article>
					{{ page.body | raw }}
				</article>
			{% endif %}
		</main>
		<aside>
			{% for post in content.blog %}
				<article>
					<a href="{{ post.slug }}" title="read {{ post.title }}">
						{{ post.title }}
					</a>
					<p>{{ post.excerpt }}</p>
				</article>
			{% else %}
			  No blog posts available.
			{% endfor %}
		</aside>
	</body>
</html>

